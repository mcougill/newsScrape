<div class="contatiner">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1>
                Travel and Leisure Article Scraper
            </h1>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}} {{#each article}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    {{this.title}}
                </h4>
            </div>
            <div class="panel-body">
                <p>
                    {{this.summary}}
                </p>
                <a href={{this.link}} target="_blank">
                    www.travelandleisure.com{{this.link}}
                </a>
                <br>
                <br>


                <button type="button" id="saveArticle" class="btn btn-link save" data-id={{this._id}}>Save Article</button>

            </div>
        </div>
        {{/each}} {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>
                    No new articles!
                </h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>
